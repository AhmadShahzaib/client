{
  "name": "file-sharing-server",
  "version": "1.0.0",
  "description": "Backend server for file sharing application",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build:client": "cd ../client && npm install && npm run build",
    "move:client": "mkdir -p public && cp -r ../client/build/* public/",
    "build:server": "npm install",
    "build": "npm run build:server && npm run build:client && npm run move:client",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monitor": "pm2 monit"
  
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.0",
    "uuid": "^9.0.0",
    "helmet": "^6.0.1",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.7.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
